{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": [".env"],
  "tasks": {
    "build": { "outputs": ["dist/**", ".next/**", ".next/cache/**"] },
    "storybook": {
      "outputs": ["dist/**", ".next/**", ".next/cache/**"],
      "env": ["FIGMA_TOKEN", "VALIDATE_FIGMA_TOKEN_API"]
    },
    "build-storybook": {
      "outputs": ["storybook-static/**"],
      "env": ["FIGMA_TOKEN", "VALIDATE_FIGMA_TOKEN_API"]
    },
    "clean": {},
    "lint": {},
    "lint:fix": {},
    "typecheck": {}
  }
}
